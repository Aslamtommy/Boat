            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="container">
                            <h1>Create Coupon</h1>
                            <br>
                            <% if (typeof message != undefined) { %>
                                <p class="text-danger"><%= message %></p>
                            <% } %>
                            <form id="couponForm" method="post" onsubmit="return validateForm()">
                                <div class="form-group">
                                    <label for="couponCode">Coupon Code:</label>
                                    
                                    <input type="text" class="form-control" id="couponCode" name="couponCode" required>
                                </div>
                                <div class="form-group">
                                    <label for="discountPercentage">Discount Percentage:</label>
                                    <input type="number" class="form-control" id="discountPercentage" name="discountPercentage" min="0" max="100" required>
                                </div>
                                <div class="form-group">
                                    <label for="minAmount">Minimum Amount:</label>
                                    <input type="number" class="form-control" id="minAmount" name="minAmount" min="0" required>
                                </div>
                                <div class="form-group">
                                    <label for="maxDiscountAmount">Maximum Discount Amount:</label>
                                    <input type="number" class="form-control" id="maxDiscountAmount" name="maxDiscountAmount" min="0" required>
                                </div>
                                <div class="form-group">
                                    <label>Choose:</label><br>
                                    <input type="radio" id="list" name="list" value="true" required>
                                    <label for="list">List</label><br>
                                    <input type="radio" id="unlist" name="list" value="false" required>
                                    <label for="unlist">Unlist</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Add Coupon</button>
                            </form>
                        </div>
                        
                    </div>
                </div> <!-- card-body end// -->
                <style>
                    /* Custom CSS can be added here */
                    .form-group {
                        margin-bottom: 20px;
                    }
                </style>
                <script>
                    document.getElementById("couponCode").addEventListener("input", function(event) {
                        var input = event.target;
                        input.value = input.value.toUpperCase();
                    });
                </script>
                <script>
                    function validateForm() {
                        var couponCode = document.getElementById("couponCode").value;
                        var discountPercentage = document.getElementById("discountPercentage").value;
                        var minAmount = document.getElementById("minAmount").value;
                        var maxDiscountAmount = document.getElementById("maxDiscountAmount").value;
                        
                        // Simple validation
                        if (couponCode === "" || discountPercentage === "" || minAmount === "" || maxDiscountAmount === "") {
                            alert("All fields are required.");
                            return false;
                        }
                        
                        if (isNaN(discountPercentage) || discountPercentage <= 0 || discountPercentage > 100) {
                            alert("Discount percentage must be a number between 0 and 100.");
                            return false;
                        }
                        
                        if (isNaN(minAmount) || minAmount < 1) {
                            alert("Minimum amount must be a positive number.");
                            return false;
                        }
                        
                        if (isNaN(maxDiscountAmount) || maxDiscountAmount < 1) {
                            alert("Maximum discount amount must be a positive number.");
                            return false;
                        }
                        
                        return true; // Form is valid
                    }
                </script>
