<script>
    // JavaScript to handle changing status
    document.querySelectorAll('.status-dropdown').forEach(dropdown => {
        dropdown.addEventListener('change', function() {
            const orderId = this.dataset.orderId;
            const newStatus = this.value;
            // Send a request to update the status using AJAX or any backend method
            // Example using fetch API:
            fetch(`/admin/updateStatus?orderId=${orderId}&newStatus=${newStatus}`, {
                method: 'POST', // Or 'PUT'
                headers: {
                    'Content-Type': 'application/json'
                    // Add any additional headers if required
                },
                // Add body if required
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                // Handle success response
                console.log('Status updated successfully:', data);
                // Optionally, you can update UI to reflect the changed status
            })
            .catch(error => {
                // Handle error
                console.error('There was a problem updating the status:', error);
            });
        });
    });
</script>