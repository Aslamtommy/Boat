<script>
    function selectedReport(){
        var selectElement = document.getElementById("reportSelect");
            var selectedIndex = selectElement.selectedIndex;
            var selectedOption = selectElement.options[selectedIndex].value;
    window.location.href=`/admin/selectedReport?option=${selectedOption}`
    }


    function downloadPdf() {
    var selectElement = document.getElementById("reportSelect");
    var selectedIndex = selectElement.selectedIndex;
    var selectedOption = selectElement.options[selectedIndex].value;
    var startDate = document.getElementById("startDate").value; // Get the start date from an input field
    var endDate = document.getElementById("endDate").value; // Get the end date from an input field
    window.location.href = `/admin/downloadPdf?option=${selectedOption}&startDate=${startDate}&endDate=${endDate}`;
}

    function downloadExel(){
        var selectElement = document.getElementById("reportSelect");
            var selectedIndex = selectElement.selectedIndex;
            var selectedOption = selectElement.options[selectedIndex].value;
            window.location.href=`/admin/downloadExel?option=${selectedOption}`
    }
    document.getElementById("customDateForm").addEventListener("submit", function(event) {
        // Prevent the default form submission behavior
        event.preventDefault();

        // Get the start and end date values
        var startDate = document.getElementById("startDate").value;
        var endDate = document.getElementById("endDate").value;

        // Construct the URL with the query parameters
        var url = "/admin/selectedReport?startDate=" + startDate + "&endDate=" + endDate;

        // Redirect the user to the URL
        window.location.href = url;
    })

</script>