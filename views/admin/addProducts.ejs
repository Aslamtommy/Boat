            <script>
              function validateForm() {
    const productName = document.getElementById('product_name').value;
    const description = document.getElementById('description').value;
    const stock = document.getElementById('stock').value;
    const price = document.getElementById('price').value;
   
    const image = document.getElementById('imageUpload');
    const category = document.getElementById('category').value;

    if (
        productName.trim() === '' ||
        description.trim() === '' ||
        stock.trim() === '' ||
        price.trim() === '' ||
      
        image.files.length === 0 || // Check if a file is selected
        category.trim() === ''
    ) {
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Please fill out all required fields.'
        });
        return false;
    }

    if (isNaN(stock) || isNaN(price)) {
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Stock and Price must be numbers.'
        });
        return false;
    }


    if (stock < 1 || price < 1 ) {
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Stock and Price  must be greater than or equal to 1.'
        });
        return false;
    }

    // Image type validation
     const allowedTypes = ['image/jpeg', 'image/png', 'image/gif'];
     const selectedFile = image.files[0];
     if (!allowedTypes.includes(selectedFile.type)) {
         Swal.fire({
             icon: 'error',
            title: 'Oops...',
             text: 'Please select a valid image file (JPEG, PNG, or GIF).'
        });
        return false;
     }

    return true;
}

            </script>
  <script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script>

              <script>
         
         function previewImages() {
    var preview = document.getElementById('imagePreview');
    var files = document.getElementById('imageUpload').files;

    if (files) {
        Array.from(files).forEach(function(file) {
            var container = document.createElement('div');
            container.classList.add('image-container');

            var img = document.createElement('img');
            img.src = URL.createObjectURL(file);
            img.classList.add('img-thumbnail', 'mr-2', 'mb-2');

            let cropper = new Cropper(img, {
                aspectRatio: 1.0, 
                viewMode: 1,
                guides: true,
                background: false,
                autoCropArea: 1,
                zoomable: true
            });

            var cropBtn = createButton('Crop', 'btn-primary', function(event) {
                event.preventDefault();
                cropImage(cropper, file);
            });

            var deleteBtn = createButton('Delete', 'btn-danger', function() {
                container.remove();
                cropper.destroy();
                removeFileFromInput(file);
            });

            container.appendChild(img);
            container.appendChild(cropBtn);
            container.appendChild(deleteBtn);
            preview.appendChild(container);
        });
    }
}


    function createButton(text, className, clickHandler) {
        var button = document.createElement('button');
        button.textContent = text;
        button.classList.add('btn', 'btn-sm', className, 'mr-2');
        button.onclick = clickHandler;
        return button;
    }

    function cropImage(cropper, file) {
        var croppedCanvas = cropper.getCroppedCanvas();
        croppedCanvas.toBlob(function(blob) {
            var reader = new FileReader();
            reader.onload = function() {
                var hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = 'croppedImages[]';
                hiddenInput.value = reader.result;
                document.getElementById('submit').appendChild(hiddenInput);

                var croppedImage = document.createElement('img');
                croppedImage.src = reader.result;
                document.getElementById('imagePreview').appendChild(croppedImage);
            };
            reader.readAsDataURL(blob);
        }, 'image/png');
    }

    function removeFileFromInput(fileToRemove) {
        var input = document.getElementById('imageUpload');
        var files = Array.from(input.files);
        var index = files.indexOf(fileToRemove);

        if (index !== -1) {
            files.splice(index, 1);
            var newInput = document.createElement('input');
            newInput.type = 'file';
            newInput.name = 'images';
            newInput.id = 'imageUpload';
            newInput.className = 'form-control';
            newInput.multiple = true;
            newInput.setAttribute('onchange', 'previewImages()');
            input.parentNode.replaceChild(newInput, input);
        }
    }
</script>

            

