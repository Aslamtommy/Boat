    <script src="assets/js/shop.js?v=3.4"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.quantity-controls').forEach(function(container) {
                container.addEventListener('click', function(event) {
                    if (!event.target.classList.contains('control-btn')) return;

                    var $container = container;
                    var $quantitySpan = $container.querySelector('.detail-qty span:first-child');
                    var currentQuantity = parseInt($quantitySpan.textContent);
                    var productId = $container.closest('tr').getAttribute('data-product-id');
                    var availableStock = parseInt($container.closest('tr').querySelector('.available-stock').textContent);

                    if (event.target.classList.contains('plus')) {
                        if (currentQuantity < availableStock) {
                            currentQuantity++;
                        } else {
                            return;
                        }
                    } else if (event.target.classList.contains('minus')) {
                        if (currentQuantity > 1) {
                            currentQuantity--;
                        } else {
                            return;
                        }
                    }

                    $quantitySpan.textContent = currentQuantity;

                    var $outOfStockMessage = $container.querySelector('.out-of-stock-message');
                    if ($outOfStockMessage) {
                        $outOfStockMessage.textContent = currentQuantity === availableStock ? 'Max Stock' : '';
                    }

                    var price = parseFloat($container.closest('tr').querySelector('.price span').textContent.replace('₹', ''));
                    var subtotal = price * currentQuantity;
                    $container.closest('tr').querySelector('.subtotal').textContent = '₹' + subtotal.toFixed(2);

                    fetch('/updatecart', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId: productId, quantity: currentQuantity })
                    })
                    .then(response => {
                        if (!response.ok) throw new Error('Network response was not ok');
                        console.log('Quantity updated successfully');
                        updateTotal();
                    })
                    .catch(error => console.error('Error updating quantity:', error));
                });
            });

            function updateTotal() {
                var total = 0;
                document.querySelectorAll('.subtotal').forEach(function(subtotalElement) {
                    if (subtotalElement) {
                        total += parseFloat(subtotalElement.textContent.replace('₹', '') || 0);
                    }
                });
                var cartTotalElement = document.querySelector('.cart_total_amount span');
                if (cartTotalElement) {
                    cartTotalElement.textContent = '₹' + total.toFixed(2);
                }
            }
        });
    </script>
</body>
