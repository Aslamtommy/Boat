    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f5f6fa;
            margin: 0;
            padding: 0;
        }

        .main {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            padding: 15px 0;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }

        .breadcrumb {
            font-size: 14px;
            color: #666;
        }

        .breadcrumb span {
            margin: 0 8px;
            color: #ccc;
        }

        .wallet-section {
            padding: 40px 0;
            text-align: center;
        }

        .wallet-card {
            width: 380px;
            height: 260px;
            margin: 0 auto 30px;
            background: linear-gradient(145deg, #1e3c72, #2a5298);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
            padding: 25px;
            color: #fff;
            position: relative;
            overflow: hidden;
        }

        .wallet-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
            transform: rotate(30deg);
            pointer-events: none;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .card-header h2 {
            font-size: 24px;
            font-weight: 700;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 1.2px;
        }

        .card-header .icon {
            font-size: 28px;
            opacity: 0.8;
        }

        .card-content .label {
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            opacity: 0.9;
            margin: 10px 0 5px;
        }

        .card-content .value {
            font-size: 18px;
            font-weight: 500;
            background: rgba(255, 255, 255, 0.15);
            padding: 8px 15px;
            border-radius: 12px;
            display: inline-block;
        }

        .card-content .balance {
            font-size: 28px;
            font-weight: 700;
            background: rgba(255, 255, 255, 0.25);
            padding: 10px 20px;
            border-radius: 15px;
            margin-top: 15px;
        }

        .action-button {
            display: inline-block;
            margin: 20px 0;
            padding: 12px 25px;
            background: #009ffd;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            text-decoration: none;
            border-radius: 25px;
            transition: background 0.3s ease;
        }

        .action-button:hover {
            background: #007acc;
            color: #fff;
        }

        .transaction-summary {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .transaction-summary h3 {
            font-size: 18px;
            font-weight: 600;
            padding: 15px 20px;
            background: #f8f9fc;
            margin: 0;
            border-bottom: 1px solid #e5e5e5;
        }

        .transaction-table {
            width: 100%;
            border-collapse: collapse;
        }

        .transaction-table th, .transaction-table td {
            padding: 12px 20px;
            text-align: left;
            font-size: 14px;
            color: #333;
        }

        .transaction-table th {
            font-weight: 600;
            background: #f1f3f5;
        }

        .transaction-table td {
            border-bottom: 1px solid #e5e5e5;
        }

        .transaction-table tr:last-child td {
            border-bottom: none;
        }

        /* Original styles unchanged below */
        .buttons {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition-duration: 0.4s;
        }

        .btn-primary:hover {
            background-color: #45a049;
        }
    </style>
</head>
