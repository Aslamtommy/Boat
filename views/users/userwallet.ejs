    .card {
        width: 300px;
        height: 200px;
        perspective: 1000px;
        margin: 0 auto; /* Center the card horizontally */
        margin-top: 50px; /* Adjust the top margin as needed */
    }

    .card-inner {
        width: 100%;
        height: 100%;
        transition: transform 0.5s;
        transform-style: preserve-3d;
        position: relative;
    }

    .card:hover .card-inner {
        transform: rotateY(180deg);
    }

    .card-face {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-front {
        background: linear-gradient(135deg, #ff6b6b, #ffcc5c); /* Change the gradient colors */
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10px;
        padding: 20px;
    }

    .card-back {
        background: linear-gradient(135deg, #ff6b6b, #ffcc5c); /* Change the gradient colors */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transform: rotateY(180deg);
        border-radius: 10px;
        padding: 20px;
    }

    .card-content {
        text-align: center;
    }

    h2,
    p {
        margin: 5px 0;
        color: white; /* Change the text color */
    }

    .buttons {
        display: flex;
        justify-content: center;
        margin-top: 20px; /* Adjust the top margin of the buttons */
    }

    .btn-primary {
        background-color: #4CAF50; /* Change the primary button background color */
        color: white; /* Change the primary button text color */
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition-duration: 0.4s;
    }

    .btn-primary:hover {
        background-color: #45a049; /* Change the hover background color */
    }
</style>

