    <script>
    function updateTimer(seconds, timerId) {
        const timerElem = document.getElementById(timerId);
        timerElem.textContent =` OTP will expire in: ${seconds}s`;
        timerElem.style.color = 'red';
    }

    function startTimer(duration, timerId, callback) {
        let timer = duration;
        const timerElem = document.getElementById(timerId);
        timerElem.style.display = 'inline';

        const timerInterval = setInterval(function () {
            updateTimer(timer, timerId);
            timer--;

            if (timer < 0) {
                clearInterval(timerInterval);
                timerElem.style.display = 'none';
                if (typeof callback === 'function') callback();
            }
        }, 1000);
    }

    // Fetch new OTP from backend
    function fetchOTP() {
        const email = document.getElementById('email').value;
        fetch(`/resendotp/${email}, { method: "GET" }`)
            .then(res => res.text())
            .then(data => {
                console.log("OTP Resent:", data);
            })
            .catch(err => {
                console.error("Error fetching OTP:", err);
            });
    }

    // Start resend countdown after button clicked
    function startResendOTPTimer() {
        const resendBtn = document.getElementById('resendOTP');
        const timerId = 'resendOTPTimer';

        resendBtn.disabled = true;
        resendBtn.classList.add('disabled');
        document.getElementById(timerId).style.display = 'inline';

        startTimer(60, timerId, () => {
            resendBtn.disabled = false;
            resendBtn.classList.remove('disabled');
            document.getElementById(timerId).style.display = 'none';
        });
    }

    // Show resend button after first 60s OTP expires
    window.onload = function () {
        document.getElementById('verifyOTPTimer').style.display = 'inline';

        // Start initial 60s timer
        startTimer(60, 'verifyOTPTimer', () => {
            document.getElementById('resendOTP').style.display = 'block';
        });

        // Handle click on Resend OTP
        document.getElementById('resendOTP').addEventListener('click', () => {
            fetchOTP();
            startResendOTPTimer(); // Start 60s countdown again
        });
    };
</script>